syntax on

" Interpret inline configuration
set modeline

" Indentation settings
set shiftwidth=4
set tabstop=4
set softtabstop=4
set expandtab
set autoindent
set smartindent
set textwidth=80

set number

" Intelligent backspace
set backspace=indent,eol,start

" Disable ex mode
map Q <Nop>

map ; :

" Reduce delay for composed keycodes
set ttimeoutlen=1

" Keep one line of context when scrolling
set scrolloff=1
